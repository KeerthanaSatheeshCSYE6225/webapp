[Unit]
Description=web App
After=cloud-init.service
Wants=cloud-init.service

[Service]
Type=simple
User=csye6225
Group=csye6225
ExecStart=/usr/bin/node /opt/csye6225/webapp/server.js
WorkingDirectory=/opt/csye6225/webapp
Restart=on-failure
RestartSec=5s

Group=csye6225
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target  